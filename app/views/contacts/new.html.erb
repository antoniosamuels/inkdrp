<div class="col-md-6 offset-md-3">
    <%= form_for @contact do |f| %>
        <form>
                <%= f.label :name %><br>
                <%= f.text_field :name, required: true, class: "form-control form-control-lg"  %>
                
                <br>

                <%= f.label :email %><br>
                <%= f.email_field :email, required: true, class: "form-control form-control-lg" %>
                <br>

                <%= f.label :phone %><br>
                <%= f.phone_field :phone, class: "form-control form-control-lg" %>
                <br>

                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="inputGroupFile01">
                    <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                </div>
                <br>

                <br>

            <%= f.label :message %><br>
            <%= f.text_area :message, as: :text, class: "form-control" %>

            <div class="hidden">
                <%= f.label :nickname %><br>
                <%= f.text_field :nickname, hint: 'leave this field blank' %>
            </div>
            <br>
            <%= f.submit 'Send Message', class: "btn btn-outline-primary" %>
        </form>
    <% end %>
</div>
